<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginRight="30dp"
    android:layout_marginLeft="30dp"
    android:layout_marginTop="30dp"
    android:layout_marginBottom="70dp"
    android:elevation="10dp"
    android:background=" #fdebd0 "
    android:orientation="vertical"
    >
    <Space
        android:layout_width="match_parent"
        android:layout_height="15dp" />
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="23dp"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/contact_us_2"
        android:text="\tContact Us"
        android:textColor=" #ba4a00 "
        android:textSize="30sp"
        android:textStyle="bold"
        android:fontFamily="@font/bebasregular"
        />

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />
    <View
        android:id="@+id/divider2"
        android:layout_width="300dp"
        android:layout_height="1dp"
        android:layout_marginStart="23dp"
        android:layout_marginEnd="9dp"
        android:background="#D3A79F9F" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="34dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:drawableLeft="@drawable/address"
        android:text="\tAddress"
        android:fontFamily="@font/bebasregular"
        android:textColor="#000000"
        android:textSize="22sp"
        />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="\nWheeltracker Application\n1st Floor, Computer Building\nFergusson College,\nPune, Maharashtra - 400604"
        android:textSize="14sp" />
    <Space
        android:layout_width="match_parent"
        android:layout_height="15dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:drawableLeft="@drawable/contact_us_3"
        android:text="\tE-mail Address"
        android:textColor="#000000"
        android:textSize="22sp"
        android:fontFamily="@font/bebasregular"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="\nwheeltracker@gmail.com"
        android:textSize="14sp" />
    <Space
        android:layout_width="match_parent"
        android:layout_height="15dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:drawableLeft="@drawable/contact_us_4"
        android:text="\tContact Number"
        android:textColor="#000000"
        android:textSize="22sp"
        android:fontFamily="@font/bebasregular"/>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="\n+91 7020585968\n+91 8149628551"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="150dp"
        android:layout_height="98dp"
        android:layout_gravity="end"
        android:layout_marginRight="30dp"
        app:srcCompat="@drawable/p1" />


</LinearLayout>
